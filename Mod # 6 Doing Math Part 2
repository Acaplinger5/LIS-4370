#Create A matrix
A = matrix (c(2, 0, 1, 3), ncol = 2)

#Create B matrix
B = matrix (c(5, 2, 4, -1), ncol = 2)

#Perform A+B
A + B

#Perform A-B
A - B

#use diag() function to build matrix of size 4 with given values in the diagonal
diag(c(4, 1, 2, 3))

#Create a 5x5 diagonal matrix with 3s on the diagonal
m <- diag(3, 5, 5)

#First row 
m[1,] <-c(3, 1, 1, 1, 1)

#Set the first column for rows 2-5 to be equal to 2 
m[2:5, 1] <- 2

#Display matrix 
m
